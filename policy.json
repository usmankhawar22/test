{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vaultName": {
            "type": "string"
        },
        "tenantId": {
            "type": "string",
            "defaultValue": "[subscription().tenantId]"
        }
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults/accessPolicies",
            "name": "[concat(parameters('vaultName'), '/add')]",
            "apiVersion": "2019-09-01",
            "properties": {
                "accessPolicies": [
                    {
                        "tenantId": "[parameters('tenantId')]",
                        "objectId": "[reference('automatee').outputs.principalId.value]",
                        "permissions": {
                            "keys": ["get","list"],
                            "secrets": ["get", "list"],
                            "certificates": [],
                            "storage": []
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'automatee')]"
              ]
        
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",

            "name": "automatee",
            "properties": {
              "mode": "Incremental",
              "templateLink": {
                "uri": "[uri(deployment().properties.templateLink.uri, 'automatee.json')]",
                "contentVersion": "1.0.0.0"
              }
            }
          }
        


    ],
    "outputs": {
    }
}